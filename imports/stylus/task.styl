.task-modal
  position absolute
  z-index 10
  top 0
  left 0
  bottom 0
  right 0
  overflow-y scroll
  background alpha(#232323, .5)
  padding 100px 0
  animation opacity .3s ease-out forwards

  &.hide
    animation opacityOff .3s ease-out .3s forwards
    .task
      animation hide .3s ease-out forwards

  .task
    position relative
    width 100%
    max-width 800px
    margin 0 auto
    background #EDEFF0
    opacity 0
    padding 0 0 30px
    animation show .3s ease-out .3s forwards

  .logo
    height 100px
    overflow hidden
    position relative
    > img
      display block

    &:after
      content ''
      display block
      absolutePos()
      background linear-gradient(to bottom, alpha(#000,.3), transparent)

  .hide-modal
    position absolute
    top 30px
    right 30px
    z-index 15

  .content
    padding 0 30px

.task .content

  .section-title
    font-size 22px
    margin 10px 0

  .text-link
    &:hover
      cursor pointer
      text-decoration underline

  .controls
    padding 10px 0
    > button
      margin-right 10px

  .task-title
    margin 0 0 20px
    padding 0
    font-size 46px

  .task-title-edit
    .trans-input
      margin 9px 0 30px
      padding 0
      font-size 46px
      line-height 50px
      display block
      width 100%
      background alpha(#232323, .01)

  .task-desc
    padding 10px 0

    .content
      word-wrap break-word
      white-space pre-wrap
      background #fff
      border-radius 3px
      padding 10px 30px
      font-family Roboto
      transition $fast
      display block
      font-size 14px
      font-style normal
      &:hover
        cursor pointer
        background $column-bg

    textarea
      padding 20px
      background $column-bg
      border-radius 3px
      display block
      font-size 14px
      font-style normal
      width 100%
      border none
      color #000
      background rgba(0,0,0,.03)
      border-color rgba(0,0,0,.15)
      box-shadow inset 0 1px 6px rgba(0,0,0,.1)
    .controls
      padding 10px 0
      > button
        margin-right 10px

  .task-members

    .member-item
      display inline-block
      height 35px
      background alpha($main-bg, .3)
      color #fff
      line-height 35px
      padding 0 15px
      margin-right 10px
      &:hover
        cursor pointer
        background alpha($main-bg, .5)

  .task-checklist

    .ckecklist-form
      padding 10px 0

      .text-link
        margin-bottom 10px

      .flex-wrap
        margin-bottom 5px

        > input
          margin-right 10px

    .checklist-item
      margin 5px 0
      position relative

      &:hover
        .ck-edit,
        .ck-remove
          opacity .5

    .checklist-title
      font-size 16px
      text-align center

    .ch-list
      padding-left 25px

    .ch-item
      display flex
      padding 3px 0
      align-items center

    .ck-edit,
    .ck-remove
      display block
      position absolute
      top 0
      width 25px
      height 25px
      opacity 0
      transition $fast
      &:before,
      &:after
        content ''
        display block
        width 100%
        height 4px
        transform-origin center
        position absolute

      &:hover
        cursor pointer

    .ck-edit
      right 35px
      border 2px solid $main-bg
      &:before,
      &:after
        background $main-bg
        left 2px
        width 17px
      &:before
        top 4px
      &:after
        top 12px

    .ck-remove
      right 0
      border 2px solid red

      &:before,
      &:after
        background red
        top 9px
        left 0
      &:before
        transform rotate(45deg)
      &:after
        transform rotate(-45deg)


    .status
      box-sizing border-box
      display block
      position relative
      width 25px
      height 25px
      margin-right 25px
      border 2px solid $main-bg
      &:hover
        cursor pointer

        &:after
          transform scale(.5)

      &:after
        content ''
        display block
        position absolute
        background $main-bg
        top 0
        left 0
        right 0
        bottom 0
        transition $fast
        transform-origin center
        transform scale(0)
      &.done
        &:after
          transform scale(.8)

  .comment-form

    textarea
      max-height 250px
      width 100%
      border none
      border-radius 3px
      padding 10px 30px
      color #232323
      font-style normal

  .comment-text
    word-wrap break-word
    white-space pre-wrap
    background #fff
    border-radius 3px
    padding 10px 30px

    span
      font-family Roboto

  .comment-item

    .meta-data
      display flex
      align-items center

    .info
      flex-grow 1


